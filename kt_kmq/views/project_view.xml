<odoo>
    <data>

 <record id="signature_request_action_inh" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">signature.request</field>
        <field name="view_mode">tree,form,kanban</field>
	<field name="inherit_id" ref="website_sign.signature_request_action"/>
        <field name="search_view_id" ref="website_sign.signature_request_view_search"/>
        <field name="domain">[('project_id','=',active_id)]</field>
        <field name="context" eval="{'search_default_no_archive': 1}"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">You have no document to sign.</p>
            <p>
                Click on <em>Request a Signature</em> to upload a template (or use an existing one) to automate
                your signature process for employment contracts, trade sale, NDA to sign, ...
            </p>
        </field>
    </record>


    <record id="act_res_partner_2_sale_order_project" model="ir.actions.act_window">
            <field name="name">Quotations and Sales</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <!--<field name="context">{'search_default_assoiciated_project': active_id}</field>-->
	    <field name="domain">[('associated_project','=',active_id)]</field>
            <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create a Quotation, the first step of a new sale.
              </p><p>
                Your next actions should flow efficiently: confirm the Quotation to a Sale Order, then create the Invoice and collect the Payment.
              </p><p>
                Note that once a Quotation becomes a Sale Order, it will be moved from the Quotations list to the Sales Order list.
              </p>
            </field>
        </record>

	   <record id="edit_project_inh" model="ir.ui.view">
            <field name="name">project.project.form</field>
            <field name="model">project.project</field>
	    <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
		<xpath expr="//form/sheet" position="before">
		    <header>
                        <field name="stage_id" widget="statusbar" clickable="True" options="{'fold_field': 'fold'}"/>
                    </header>
		</xpath>

		<xpath expr="//div[@class='oe_chatter']" position="inside">
                        <field name="message_ids" widget="mail_thread"/>
		</xpath>

		<xpath expr="//form/sheet/div[@class='oe_title']/h1/field[@name='name']" position="before">
			<field name="project_number" readonly="1"/>&#x2063;&#x2063;
			<field name="space" readonly="1"/>&#x2063;&#x2063;
		</xpath>
		<xpath expr="//form/sheet/div[@class='oe_title']" position="after">
				<group col="2">
				<group><field name="start_date"/>
        	                <field name="end_date"/>
                	        <field name="job_type"/></group>
                        	<group><field name="artwork_format"/>
	                        <field name="pantone"/>
        	                <field name="deadline_date"/></group></group>

		</xpath>
		<xpath expr="//notebook" position="inside">
			<page name="artwork_details" string="Artwork Details">
				<field name="artwork_upload_ids" readonly="1">
					<tree>
						<field name="filename"/>
						<field name="pantone"/>
						<field name="comments"/>
					</tree>
				</field>
			</page>
		</xpath>
		
		<xpath expr="//form/sheet/div[@class='oe_button_box']" position="inside">

		    <button class="oe_stat_button" type="action" name="%(act_res_partner_2_sale_order_project)d" 
                        
                        icon="fa-usd">
                        <field string="Sales" name="so_amount" widget="statinfo"/>
                    </button>


			<!--<button class="oe_stat_button" type="object" name="show_quotations" icon="fa-usd">
                            <field name="so_amount" widget="statinfo"/>
                        </button>-->

			<button class="oe_stat_button" type="object" name="show_invoice" icon="fa-sticky-note">
                            <field name="inv_amount" widget="statinfo"/>
                        </button>

			<button class="oe_stat_button" type="action" name="%(signature_request_action_inh)d" icon="fa-pencil">
                            <field name="sign_count" widget="statinfo"/>
                        </button>

			<button class="oe_stat_button" type="object" name="show_deliveries" icon="fa-truck">
                            <field name="do_count" widget="statinfo"/>
                        </button>

		</xpath>
	    </field>
	   </record>

        <record id="project_nymber_seq" model="ir.sequence">
              <field name="name">Project Number Sequence</field>
              <field name="code">project.project</field>
              <field name="padding">4</field>
        </record>

	<record id="signature_request_view_form_inherit" model="ir.ui.view">
	        <field name="name">signature.request.form</field>
        	<field name="model">signature.request</field>
		<field name="inherit_id" ref="website_sign.signature_request_view_form"/>
	        <field name="arch" type="xml">
			<field name="archived" position="after">
				<field name="project_id"/>
			</field>
		</field>
	</record>

	<record id="product_category_form_view_inh" model="ir.ui.view">
                <field name="name">product.category.form</field>
                <field name="model">product.category</field>
                <field name="inherit_id" ref="product.product_category_form_view"/>
                <field name="arch" type="xml">
                        <xpath expr="//form/sheet/group[@name='first']/field[@name='parent_id']" position="after">
                                <field name="pastel_code"/>
                        </xpath>
                </field>
        </record>


	<record id="signature_request_template_view_form_inherit" model="ir.ui.view">
                <field name="name">signature.request.template.form</field>
                <field name="model">signature.request.template</field>
                <field name="inherit_id" ref="website_sign.signature_request_template_view_form"/>
                <field name="arch" type="xml">
                        <field name="archived" position="after">
                                <field name="project_id"/>
                        </field>
                </field>
        </record>


		<record id="project_stages_form" model="ir.ui.view">
                        <field name="model">project.stages</field>
                        <field name="arch" type="xml">
                                <form>
                                        <sheet>
                                                <group>
                                                        <field name="name" required="1"/>
                                                        <field name="send_customer_comm"/>
                                                        <field name="comm_template"/>
							<field name="send_customer_sms"/>
                                                        <field name="sms_template"/>
                                                </group>
                                        </sheet>
                                </form>
                        </field>
                </record>

                <record id="project_stages_tree" model="ir.ui.view">
                        <field name="model">project.stages</field>
                        <field name="arch" type="xml">
                                <tree>
					<field name="sequence" widget="handle"/>
                                        <field name="name" required="1"/>
                                        <field name="send_customer_comm"/>
                                        <field name="comm_template"/>
					<field name="send_customer_sms"/>
                                        <field name="sms_template"/>

                                </tree>
                        </field>
                </record>

                <record id="project_stages_action" model="ir.actions.act_window">
                        <field name="name">Project Stages</field>
                        <field name="res_model">project.stages</field>
                        <field name="view_type">form</field>
                        <field name="view_mode">tree,form</field>
                </record>

	<menuitem action="project_stages_action" id="menu_projects_stages_config" name="Project Stages" parent="project.menu_project_config" sequence="20"/>

	<record id="multi_attach_form" model="ir.ui.view">
                        <field name="model">multi.attachment</field>
                        <field name="arch" type="xml">
                                <form>
                                        <sheet>
						<h1>Upload Artworks</h1>
                                                        <field name="model_id" invisible="1" readonly="1"/>
                                                        <field name="att_ids" widget="many2many_binary"/>
                                        </sheet>
                                </form>
                        </field>
                </record>

                <record id="multi_attach_tree" model="ir.ui.view">
                        <field name="model">multi.attachment</field>
                        <field name="arch" type="xml">
                                <tree>
					<field name="model_id" readonly="1"/>
                                        <field name="att_ids"/>

                                </tree>
                        </field>
                </record>

                <record id="multi_attach_action" model="ir.actions.act_window">
                        <field name="name">Artwork Upload</field>
                        <field name="res_model">multi.attachment</field>
                        <field name="view_type">form</field>
                        <field name="view_mode">tree,form</field>
                </record>

	<menuitem action="multi_attach_action" id="multi_attach_action_config" name="Artwork Uplaods" parent="project.menu_project_config" sequence="21"/>

 <record id="email_template_artwork_upload_mail" model="mail.template">
            <field name="name">Invitation for Artwork Upload</field>
            <field name="model_id" ref="project.model_project_project"/>           
            <field name="email_from">admin@example.co.za</field>
            <field name="email_to">raj@strategicdimensions.co.za</field>
            <field name="subject">Invitation for Artwork Upload</field>
            <field name="body_html"><![CDATA[
<p>Hello ${object.partner_id and object.partner_id.name or ''},</p>
<p>Please click on the below url to upload your Artworks</p>
<p><a href='http://kmquat.odoo.co.za/upload/artwork/${object.id}'>Upload Artworks</a></p>
</p><p>Thank you!</p>
]]></field>
        </record>

<template id="upload_artwork">
    <t t-call="website.layout">

        <div id="wrap"  class="container">
            <h1 class="text-center">
                Upload Artwork
            </h1>

            <div class="row">
                <section id="forms">
<form action="/submit/doc/" method="post" enctype="multipart/form-data">
                 <div class="row o_website_portal_details">
                            <div class="col-md-8">
                                <div class="row">

			<div t-attf-class="col-lg-6" style="margin: 27px 50px 25px 478px;">
			 <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
			 <input name="attachment" type="file" class="file" multiple="true" data-show-upload="true" data-show-caption="true" lass="file" data-show-preview="true"/>
			</div>

                        <button type="submit" style="margin-left: 547px;" class="btn btn-default btn-primary mb32 a-submit next-submit">Submit<span class="fa fa-long-arrow-right"/></button>
                  </div>
                </div>
              </div>
	     </form>
                </section>
            </div>
        </div>
    </t>
</template>
</data>
