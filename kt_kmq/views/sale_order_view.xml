<odoo>
	<data>
	<template id="assets_backend" name="Stock Picking Css" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                        <link rel="stylesheet" href="/kt_kmq/static/src/css/stock_picking.css"/>
            </xpath>
        </template>

		<record id="view_res_users_inht" model="ir.ui.view">
                    <field name="name">res.users.form.inh</field>
                    <field name="model">res.users</field>
                    <field name="inherit_id" ref="base.view_users_form"/>
                    <field name="arch" type="xml">
                        <field name="partner_id" position="after">
                                <field name="user_pastel_id"/>
                        </field>
                    </field>
                 </record>

	
		 <record id="view_stock_product_tree_inht" model="ir.ui.view">
		    <field name="name">product.product.tree.inh</field>
                    <field name="model">product.product</field>
                    <field name="inherit_id" ref="stock.view_stock_product_tree"/>
                    <field name="arch" type="xml">
			<field name="virtual_available" position="after">
				<field name="stock_available"/>
				<field name="stock_available2"/>
				<field name="sale_stock_available"/>
				<field name="purchase_stock_available"/>
			</field>
		    </field>
		 </record>

		 <record id="view_order_form_inh" model="ir.ui.view">
	            <field name="name">sale.order.form</field>
        	    <field name="model">sale.order</field>
		    <field name="inherit_id" ref="sale.view_order_form"/>
		    <field name="arch" type="xml">

			<field name="partner_id" position="attributes">
                                <attribute name="domain">[('customer','=',True),('parent_id','=',False)]</attribute>
                                <attribute name="context">{'search_default_customer':1,'show_address':1}</attribute>
                                <attribute name="options">{&quot;always_reload&quot;: True}</attribute>
                         </field>
			 <!-- Jagadeesh JUN 06 added-->
			 <xpath expr="//group[@name='sales_person']" position="after">
			  <group string="Cancel Reason">
				    <field name="required_reason" invisible="1"/>
                                    <!--<field name="lost_reason_id" readonly="1" options="{'no_create_edit':True,'no_open':True}" attrs="{'invisible':[('required_reason','=',True)] }"/>
                                    <field name="lost_reason" readonly="1" attrs="{'invisible':[('required_reason','=',False)] }"/>-->
				    <field name="lost_reason_id" readonly="1" options="{'no_create_edit':True,'no_open':True}" />
                                    <field name="lost_reason" readonly="1"/>
                          </group>
			 </xpath>
			 <field name="client_order_ref" position="replace"/>
                         <xpath expr="//field[@name='payment_term_id']" position="after">
                             <field name="payment_deposit"/>
			     <field name="client_order_ref"/>
			     <field name="has_branding"/>
			     <!-- Jagadeesh JUN08 start -->
                             <!--<field name="required_reason" invisible="1"/>-->
                             <!--<field name="lost_reason_id" readonly="1" options="{'no_create_edit':True,'no_open':True}" attrs="{'invisible':[('required_reason','=',True)] }"/>
                             <field name="lost_reason" readonly="1" attrs="{'invisible':[('required_reason','=',False)] }"/>-->

                             <!-- Jagadeesh JUN18 end -->
                         </xpath>
			 <field name="pricelist_id" position="replace">				
			 </field>
			 <field name="confirmation_date" position="after">
			     <field name="pricelist_id" groups="product.group_sale_pricelist" readonly="1"/>
			 </field>
                         <!-- Jagadeesh JUN06 end -->

			 <!-- Jagadeesh JUN 06 commented to remove proforma functionality -->
			 <!--<xpath expr="/form/header/button[@name='action_quotation_send']" position="after">
				<button name="move_to_proforma" string="Pro-Forma" type="object" states="draft" class="btn-primary"/>
			 </xpath>

			 <xpath expr="/form/header/button[@name='action_quotation_send']" position="attributes">
                                <attribute name="states">draft,proforma</attribute>
                         </xpath>

			 <xpath expr="/form/header/button[@name='print_quotation']" position="attributes">
                                <attribute name="states">draft,proforma</attribute>
                         </xpath>

			 <xpath expr="/form/header/button[@class='o_sale_confirm']" position="attributes">
                                <attribute name="states">draft,proforma</attribute>
                         </xpath>

			 <xpath expr="/form/header/button[@name='action_cancel']" position="attributes">
                                <attribute name="states">draft,sent,sale,proforma</attribute>
                         </xpath>


			 <field name="state" position="attributes">
				<attribute name="statusbar_visible">draft,sent,proforma,sale</attribute>
			 </field>-->
			 <!-- Jagadeesh JUN 06 end -->
			 <field name="partner_id" position="after">
				<field name="associated_project" readonly="1"/>
				<field name="job_type" required="0"/>
	                        <field name="artwork_format"/>
        	                <field name="pantone" required="0"/>
                	        <field name="deadline_date" attrs="{'required':[('job_type','=','Deadline')]}"/>
				<field name="alternate_do"/>
				<label for="alt_street" string="Enter Address" attrs="{'invisible':[('alternate_do','=',False)]}"/>
					<div name="div_address" attrs="{'invisible':[('alternate_do','=',False)]}">
					<field name="alt_street" placeholder="Street..."/>
					<field name="alt_street2"/>
					<div class="address_format">
					    <field name="alt_city" placeholder="City" style="width: 40%%"/>
					    <field name="alt_state_id"  class="oe_no_button" placeholder="State" style="width: 37%%" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
					    <field name="alt_zip" placeholder="ZIP" style="width: 20%%"/>
					</div>
					<field name="alt_country_id"  placeholder="Country" class="oe_no_button" options= "{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
				 </div>

			 </field>
			 <!-- Jagadeesh JUN13 start -->
			 <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree" position="attributes">
				<attribute name="editable">false</attribute>
			 </xpath>
			 <!-- Jagadeesh JUN13 end -->
			 <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/form/field[@name='name']" position="after">
				<!--<field name="branding_method_ids" widget="many2many_tags"/>--><!-- Jagadeesh -->
				<div class="oe_inline">
                                                <label for="add_product_branding"/>
                                                <field name="add_product_branding"/>
                                </div>
				<field name="product_branding_ids" attrs="{'invisible':[('add_product_branding','=',False)]}">
					<tree editable="bottom">
					        <field name="product_id"/><!-- Jagadeesh -->
						<field name="branding_location"/>
						<field name="branding_method" options="{'no_create_edit':True,'no_open':True,'no_quick_create':True}" />
						<field name="branding_method_name" invisible="1"/>
						<field name="color_variant" attrs="{'readonly':[('branding_method_name','in',['Heat Press','Sublimation','Stickers','Doming'])],'required':[('branding_method_name','in',['Pad Print','Screen Print'])]}" options="{'no_create_edit':True,'no_open':True,'no_quick_create':True}"/>
						<field name="size_variant" attrs="{'readonly':[('branding_method_name','in',['Pad Print','Screen Print'])],'required':[('branding_method_name','in',['Heat Press','Sublimation','Stickers','Doming'])]}" options="{'no_create_edit':True,'no_open':True,'no_quick_create':True}"/>
						<field name="setup_cost"/>
						<field name="item_cost"/>
						<field name="total_cost"/>
					</tree>
				</field>

			</xpath>
			<field name="order_line" position="after">
                                <field name="product_branding2_ids" readonly="1">
                                        <tree editable="bottom">
					        <field name="product_id"/><!-- Jagadeesh -->
                                                <field name="branding_location"/>
                                                <field name="branding_method"/>
                                                <field name="color_variant"/>
                                                <field name="size_variant"/>
                                                <field name="setup_cost"/>
                                                <field name="item_cost"/>
                                                <field name="total_cost"/>
                                        </tree>
                                </field>
			</field>

		    </field>
		</record>

 		<record id="view_order_form_with_carrier_inh_kt" model="ir.ui.view">
                    <field name="name">view.order.form.with.carrier.inh.kt</field>
                    <field name="model">sale.order</field>
                    <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
                    <field name="arch" type="xml">
                        <!--<field name="carrier_id" position="attributes">
                           <attribute name="required">1</attribute>
                        </field>-->
			<field name="carrier_id" position="replace">
                            <field name="carrier_id"  context="{'order_id': id}" class="oe_inline" options="{'no_create': True, 'no_open': True}" required="1"/>
                        </field>
                        <xpath expr="//div[@name='carrier_selection']" position="after">
                            <field name="show_delivery_hub" invisible="1"/>
                            <field name="show_courier_company" invisible="1"/>
                            <field name="delivery_hub_id" attrs="{'invisible':[('show_delivery_hub','=',False)]}" options="{'no_create':True,'no_create_edit':True}"/>
                            <field name="courier_company_id" attrs="{'invisible':[('show_courier_company','=',False)]}" options="{'no_create':True,'no_create_edit':True}"/>

                        </xpath>
                    </field>
                </record>

                <record id="sale_order_form_quote_inh_kt" model="ir.ui.view">
                    <field name="name">sale.order.form.quote.inh.kt</field>
                    <field name="model">sale.order</field>
                    <field name="inherit_id" ref="website_quote.sale_order_form_quote"/>
                    <field name="arch" type="xml">
                        <button name="open_quotation" position="attributes">
                            <attribute name="invisible">1</attribute>
                        </button>
                    </field>
                </record>


		<record id="branding_lines_form" model="ir.ui.view">
                    <field name="name">product.branding.lines.form</field>
                    <field name="model">product.branding.lines</field>
                    <field name="arch" type="xml">
                        <form>
                                <sheet>
                                        <group>
                                                <field name="product_id" invisible="1"/>
                                                <field name="branding_location"/>
                                                <field name="branding_method"/>
						<field name="color_variant"/>
						<field name="size_variant"/>
						<field name="setup_cost"/>
						<field name="item_cost"/>
						<field name="total_cost"/>
                                        </group>
                                </sheet>
                        </form>
                    </field>
                </record>

		<record id="branding_lines_tree" model="ir.ui.view">
                    <field name="name">product.branding.lines.tree</field>
                    <field name="model">product.branding.lines</field>
                    <field name="arch" type="xml">
                        <tree editable="bottom">
                        	<field name="product_id" invisible="1"/>
                                <field name="branding_location"/>
                                <field name="branding_method"/>
                                <field name="color_variant"/>
                                <field name="size_variant"/>
                                <field name="setup_cost"/>
                                <field name="item_cost"/>
                                <field name="total_cost"/>
                        </tree>
                    </field>
                </record>

		<record id="quotation_cancel_form" model="ir.ui.view">
                    <field name="name">quotation.cancel.form</field>
                    <field name="model">quotation.cancel</field>
                    <field name="arch" type="xml">
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="required_reason" invisible="1"/>
                                        <field name="lost_reason_id" options="{'no_create_edit':True,'no_open':True}" required="1"/>
                                        <!--<field name="lost_reason" attrs="{'required':[('required_reason','=',True)]}"/>-->
                                    </group>
                                    <group></group>
                                </group>
				<group>
				    <field name="lost_reason" attrs="{'required':[('required_reason','=',True)]}"/>
				</group>
                            </sheet>
                            <footer>
                                <button name="submit_reason" type="object" string="Submit" class="oe_highlight"/>
                                or
                                <button string="Cancel" class="oe_link" special="cancel"/>
                            </footer>
                        </form>
                    </field>
                </record>

        <record id="action_import_product_images" model="ir.actions.server">
            <field name="name">Import Product Images</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">action=env['product.template'].import_product_images(context.get('active_ids',[]))</field>
        </record>

        <record id="ir_action_import_product_images" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'product.template'" name="model"/>
            <field name="name">Import Product Images</field>
            <field eval="'ir.actions.server,%d'%action_import_product_images" name="value"/>
        </record>

        <record id="action_import_product_variants_images" model="ir.actions.server">
            <field name="name">Import Product Images</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="state">code</field>
            <field name="code">action=env['product.product'].import_product_images(context.get('active_ids',[]))</field>
        </record>

        <record id="ir_action_import_product_variants_images" model="ir.values">
            <field eval="'client_action_multi'" name="key2"/>
            <field eval="'product.product'" name="model"/>
            <field name="name">Import Product Images</field>
            <field eval="'ir.actions.server,%d'%action_import_product_variants_images" name="value"/>
        </record>

        <record id="stock_picking_form_inh_kt" model="ir.ui.view">
            <field name="name">stock.picking.form.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                        <field name="sale_order_id"/>
                        <field name="invoice_id"/>
                        <field name="has_branding"/>
                        <!--<field name="invoice_status_g" class="oe_right oe_inline my_customize_status_green" attrs="{'invisible':[('invoice_status_g','not in',['open','paid']),('customer_account_type','=','account')]}"/>
                        <field name="invoice_status_r" class="oe_right oe_inline my_customize_status_red" attrs="{'invisible':[('invoice_status_r','not in',['open','draft']),('customer_account_type','=','cod')]}"/>-->
                        <field name="customer_account_type"/>
                        <field name="invoice_status_color" invisible="1"/>
                        <field name="invoice_status_g" class="my_customize_status_green" attrs="{'invisible':['|',('invoice_status_color','=',False),('invoice_status_color','in',['none','red'])]}"/>
                        <field name="invoice_status_r" class="my_customize_status_red" attrs="{'invisible':['|',('invoice_status_color','=',False),('invoice_status_color','in',['none','green'])]}"/>
                </field>
                <xpath expr="//notebook/page[3]" position="after">
                    <page string="Description">
                        <group>
                            <field name="description"/>
                        </group>
                    </page>
                </xpath>
                <field name="location_dest_id" position="after">
                    <field name="is_printed" invisible="0" readonly="1"/>
                    <field name="printed" invisible="0" readonly="1"/>
                </field>
                <xpath expr="//button[@name='do_print_picking']" position="replace">
                    <button name="do_print_picking" string="Print" groups="stock.group_stock_user" type="object" attrs="{'invisible': ['|',('state', 'not in', ('assigned', 'partially_available')),('printed','=',True)]}"/>
		    <button name="do_print_invoice" string="Print Invoice" groups="stock.group_stock_user" type="object" attrs="{'invisible': ['|',('state', 'not in', ('assigned', 'partially_available')),('is_printed','=',True)]}"/>
                </xpath>


            </field>
        </record>
        <record id="stock_pick_tree_inh_kt" model="ir.ui.view">
            <field name="name">stock.pick.tree.inh.kt</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="has_branding"/>
                    <field name="carrier_id" string="Delivery Method"/>
                    <field name="customer_account_type" string="Account Type"/>
                    <field name="invoice_status_g"/>
                    <field name="printed"/>
                </field>
            </field>
        </record>


        <record id="delivery_hub_view_form" model="ir.ui.view">
            <field name="name">delivery.hub.form</field>
            <field name="model">delivery.hub</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="delivery_hub_view_tree" model="ir.ui.view">
            <field name="name">delivery.hub.tree</field>
            <field name="model">delivery.hub</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="delivery_hub_action" model="ir.actions.act_window">
            <field name="name">Delivery Hub</field>
            <field name="res_model">delivery.hub</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="delivery_hub_menu" action="delivery_hub_action" string="Delivery Hub" parent="delivery.sale_menu_delivery" sequence="2"/>

        <record id="courier_company_view_form" model="ir.ui.view">
            <field name="name">courier.company.form</field>
            <field name="model">courier.company</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="courier_company_view_tree" model="ir.ui.view">
            <field name="name">courier.company.tree</field>
            <field name="model">courier.company</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="courier_company_action" model="ir.actions.act_window">
            <field name="name">Courier Company</field>
            <field name="res_model">courier.company</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="courier_company_menu" action="courier_company_action" string="Courier Company" parent="delivery.sale_menu_delivery" sequence="3"/>


	</data>
</odoo>
